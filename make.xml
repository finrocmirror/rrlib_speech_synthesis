  </rrlib>

  <rrlib name="speech_synthesis_festival" optional="true"
        libs="festival">
    <sources>
      festival/*
    </sources>
  </rrlib>
 
  <testprogram name="voices">
    <sources>
      test/test_voices.cpp
    </sources>
  </testprogram>

